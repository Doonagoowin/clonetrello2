<h1><%= @board.name %></h1>

<ul>
  <% @board.cards.each do |card| %>
  <li>
    <%= link_to card.name, card_path(card) %>
    <% end %>
  </li>
</ul>

<%= link_to 'Add Card', new_board_card_path(@board) %>
<%= link_to 'Edit Board', edit_board_path(@board) %>
<%= link_to 'Delete Board', @board, method: :delete %>